#!/usr/bin/env bash
# This script creates an RSA key pair with specified parameters

# Define variables
KEY_NAME="school"
BITS=4096
PASSPHRASE="betty"

# Generate RSA key pair
ssh-keygen -t rsa -b $BITS -N "$PASSPHRASE" -C "Generated by ALX" -f ~/.ssh/$KEY_NAME

# Output success message
echo "RSA key pair successfully generated."
echo "Private key saved as: ~/.ssh/$KEY_NAME"
echo "Public key saved as: ~/.ssh/$KEY_NAME.pub"
